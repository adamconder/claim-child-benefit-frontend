@this(
    line: Line
)

@(bankAccount: JourneyModel.BankAccount)(implicit messages: Messages)

@line("pdf.sortCode", bankAccount.details.sortCode)

@line("pdf.accountNumber", bankAccount.details.accountNumber)

@line("pdf.accountHolder", messages(s"pdf.accountHolder.${bankAccount.holder.toString}"))

@line("pdf.bankName", bankAccount.details.bankName)

@bankAccount.details.rollNumber.map { rollNumber =>
    line("pdf.rollNumber", rollNumber)
}

@line("pdf.accountName", s"${bankAccount.details.firstName} ${bankAccount.details.lastName}")
